@using TravelTrip.Models.Siniflar
@model List<Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>    
        <th>ID</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/SilBlog/@x.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/BlogGuncelle/@x.Id" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Blog/BlogDetay/@x.Id" class="btn btn-default">Detaylar</a></td>
        </tr>
    }
</table>

<a href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Blog</a>